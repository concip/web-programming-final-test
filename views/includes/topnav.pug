.header.clearfix
  nav.navbar.navbar-expand-md.navbar-drak.bg-dark.fixed-top
    .container
      a.nav.navbar-brand.font-weight-bold(href="/") 이벤트Talk
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarsExampleDefault", aria-controls="navbarsExampleDefault", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

    #navbarsExampleDefault.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav.nav-link(href="/questions") Questions
        li.nav-item
          a.nav.nav-link(href="/users") Users
        if (!currentUser)
          li.nav-item
            a.nav.nav-link(href='/signin') Signin
          li.nav-item
            a.nav.nav-link(href='/users/new') Signup
        else
          li.nav-item
            a.nav.nav-link(href=`/users/${currentUser._id}`) My Profile
          li.nav-item
            a.nav.nav-link(href='/signout') Signout
